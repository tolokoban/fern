{
    "name": "fern",
    "version": "1.0.0",
    "description": "Barnsley fern painted with Rust",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --mode development",
        "build": "MODE=production webpack --mode production",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tolokoban/snapshot-annotation.git"
    },
    "keywords": [
        "snapshot",
        "help",
        "annotation"
    ],
    "author": "Tolokoban",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/tolokoban/snapshot-annotation/issues"
    },
    "homepage": "https://github.com/tolokoban/snapshot-annotation#readme",
    "dependencies": {
        "colord": "^2.9.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.12.0"
    },
    "devDependencies": {
        "@mdx-js/loader": "^2.3.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.2",
        "@types/mdx": "^2.0.5",
        "@types/node": "^20.2.5",
        "@types/opentype.js": "^1.3.4",
        "@types/react": "^18.2.8",
        "@types/react-dom": "^18.2.4",
        "@wasm-tool/wasm-pack-plugin": "^1.7.0",
        "babel-jest": "^29.5.0",
        "babel-loader": "^9.1.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.4",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^46.2.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unicorn": "^47.0.0",
        "file-loader": "^6.2.0",
        "gh-pages": "^5.0.0",
        "html-webpack-plugin": "^5.5.1",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "make-dir": "^3.1.0",
        "mini-css-extract-plugin": "^2.7.6",
        "opentype.js": "^1.3.4",
        "prettier": "^2.8.8",
        "sharp": "^0.32.1",
        "style-loader": "^3.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "typescript": "^5.1.3",
        "url-loader": "^4.1.1",
        "webpack": "^5.85.1",
        "webpack-cli": "^5.1.3",
        "webpack-dev-server": "^4.15.0",
        "webpack-manifest-plugin": "^5.0.0",
        "webpack-shell-plugin-next": "^2.3.1",
        "workbox-webpack-plugin": "^7.0.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "tsx",
            "ts",
            "js",
            "jsx",
            "wasm"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/*.(test|spec).(ts|tsx)"
        ],
        "globals": {
            "ENV_VARIABLES": {}
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/mocks.js",
            "\\.(css|less)$": "<rootDir>/__mocks__/mocks.js",
            "\\.(py|sh|txt|bin)$": "<rootDir>/__mocks__/mocks.js"
        },
        "verbose": true,
        "collectCoverage": true,
        "coverageReporters": [
            "lcov"
        ],
        "coverageDirectory": "test-coverage",
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "port": 53006
}