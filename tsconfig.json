{
    "compilerOptions": {
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src/",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "diagnostics": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "extendedDiagnostics": false,
        "incremental": false,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "ES6"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist/",
        "paths": {
            "@/*": ["*"],
            "@rust/*": ["../pkg/*"],
            "*": ["src/*", "node_modules/*"]
        },
        "preserveWatchOutput": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES6"
    },
    "output": ["./dist"],
    "files": ["src/index.ts"],
    "include": ["./src/**/*.ts", "./src/**/*.css"],
    "exclude": [
        "node_modules/",
        "doc/",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.SKIP.*"
    ]
}
